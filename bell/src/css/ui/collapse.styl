{$selector-collapse}

    overflow hidden

{$selector-panel}

    border-top 1px solid $collapse-panel-border-color

    &:last-child
        border-bottom 1px solid $collapse-panel-border-color

    {$selector-panel-el}
        width 100%
        cursor pointer
        user-select none
        font-weight bold

        padding $collapse-panel-el-padding
        font-size $collapse-panel-el-font-size

        {$selector-panel-el}-icon

            margin-right $collapse-panel-el-icon-margin-right
            transition transform 0.2s linear
            transform-origin center
            font-size $collapse-panel-el-bell-icon-font-size
            transform rotate(-90deg)

    {$selector-panel-inner}

        display none
        transition height 0.1s linear
        overflow hidden
        padding $collapse-panel-inner-padding
        font-size $collapse-panel-inner-font-size

        {$selector-panel}-content

            padding $collapse-panel-inner-content-padding


    {$selector-panel-el}-open

        > {$selector-panel-el}-icon

            transform rotate(0)

    &{$selector-panel}-open

        > {$selector-panel-inner}

            display block