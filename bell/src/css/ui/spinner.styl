{$selector-spinner}

    ui-spinner()

    display inline-block
    text-align center

    {$selector-spinner-dot}

        position relative
        display block
        border-radius 50%

        animation spin-bounce 1s 0s ease-in-out infinite

    &{$selector-spinner-fix}

        ui-fullscreen(absolute)
        background-color $selector-spinner-mask-color

        {$selector-spinner}-main
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)

@keyframes spin-bounce {
    0% {
        transform scale(0)
    }

    100% {
        transform scale(1)
        opacity 0
    }
}