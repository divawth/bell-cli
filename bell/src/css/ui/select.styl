{$selector-select}

    display inline-block
    box-sizing border-box
    user-select none
    text-align left
    width 100%
    position relative

    ui-scrollbar()

    ui-select()

    &{$selector-active}

        {$selector-select}-arrow

            transform rotate(180deg)

    &{$selector-select}-multiple

        {$selector-select}-value,
        {$selector-select}-placeholder

            white-space normal
            line-height 1.8


    {$selector-select-button}

        width 100%
        display inline-block
        position relative
        outline 0
        cursor pointer
        border-radius $radius-base
        transition border-color .3s, box-shadow .3s

        {$selector-select}-arrow

            position absolute
            right 0
            top 0
            font-size 14px
            color $brand-muted
            transform-origin center
            transition transform .3s

        {$selector-select}-value,
        {$selector-select}-placeholder

            display block
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
            color $brand-muted

            &.bell-hide

                display none

        {$selector-select}-value

            color $brand-main

    {$selector-select}-dropdown

        width 100%
        overflow auto
        box-sizing border-box
        box-shadow 0 1px 4px rgba(0,0,0,0.2)
        opacity 1
        max-height 0px
        position absolute
        z-index $zindex-select
        transition max-height .3s, opacity .3s

        background-color $brand-bg
        border-radius $radius-base

        &.bell-hide

            opacity 0
            display none

        {$selector-select}-list

            list-style none
            padding 0
            margin 0

        {$selector-select}-option

            clear both
            white-space nowrap
            list-style none
            cursor pointer
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
            transition background-color .3s, color .3s, border-color .3s

            color $brand-secondary

            &{$selector-active}

                font-weight bold
                background-color $brand-bg-active

    &{$selector-select}-disabled

        {$selector-select}-button

            cursor not-allowed
            background-color $brand-bg-disabled

            &{$selector-hover}

                border-color $brand-border

    &{$selector-select}-top

        {$selector-select}-dropdown

            top auto

        {$selector-select}-button

            {$selector-select}-arrow

                transform rotate(180deg)

        &{$selector-active}

            {$selector-select}-arrow

                transform rotate(0)
