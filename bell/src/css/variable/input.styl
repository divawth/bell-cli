$selector-input = $selector-prefix + '-input'
$selector-input-wrapper = $selector-input + '-wrapper'
$selector-input-el = $selector-input + '-el'
$selector-textarea = $selector-prefix + '-textarea'
$selector-input-placeholder = $selector-input + '-placeholder'

// input
$input-el-color = $brand-main
$input-el-font-size = 12px
$input-el-height = 32px
$input-el-line-height = 32px
$input-el-padding = 4px 7px
$input-clearable-width = 24px
$input-clearable-font-size = 16px

$input-clearable-color = #ddd
$input-el-placeholder-color = #D2D2D2

$input-eye-color = #ddd
$input-eye-color-hover = #aaa

$input-hash = {
    '': {
        padding: 4px 7px,
        height: 32px,
        line-height: 1.5
    },
    'small': {
        padding: 1px 7px,
        height: 24px,
        line-height: 1.5
    }
    'large': {
        padding: 6px 7px,
        height: 36px,
        line-height: 1.5
    }
}

$input-color-hash = {
    '': {
        color: $brand-secondary,
        bg-color: $brand-white,
        border-color: $brand-border,
        border-color-hover: $brand-primary-hover,
        box-shadow: 0 0 0 2px $brand-primary-box-shadow-color
    },
    'success': {
        color: $brand-secondary,
        bg-color: $brand-white,
        border-color: $brand-success-hover,
        border-color-hover: $brand-success-hover,
        box-shadow: 0 0 0 2px $brand-success-box-shadow-color
    },
    'error': {
        color: $brand-secondary,
        bg-color: $brand-white,
        border-color: $brand-error-hover,
        border-color-hover: $brand-error-hover,
        box-shadow: 0 0 0 2px $brand-danger-box-shadow-color
    },
    'info': {
        color: $brand-secondary,
        bg-color: $brand-white,
        border-color: $brand-info-hover,
        border-color-hover: $brand-info-hover,
        box-shadow: 0 0 0 2px $brand-info-box-shadow-color
    },
    'warning': {
        color: $brand-secondary,
        bg-color: $brand-white,
        border-color: $brand-warning-hover,
        border-color-hover: $brand-warning-hover,
        box-shadow: 0 0 0 2px $brand-warning-box-shadow-color
    },
    'danger': {
        color: $brand-secondary,
        bg-color: $brand-white,
        border-color: $brand-danger-hover,
        border-color-hover: $brand-danger-hover,
        box-shadow: 0 0 0 2px $brand-danger-box-shadow-color
    },
    'disabled': {
        color: $brand-primary,
        bg-color: #F7F7F7,
        border-color: $brand-border-disabled,
        border-color-hover: $brand-border-disabled,
        box-shadow: none
    }
}