$selector-checkbox = $selector-prefix + '-checkbox'
$selector-checkbox-inner = $selector-checkbox + '-inner'
$selector-checkbox-input = $selector-checkbox + '-input'

$checkbox-font-size = 12px;
$checkbox-gap = 8px;
$checkbox-inner-size = 14px;

$checkbox-brand-hash = {
    '': {
        color-active: $brand-primary,
        bg-color-active: $brand-primary,
        color-hover: $brand-primary,
        box-shadow: 0 0 0 2px $brand-primary-box-shadow-color,
        color: $brand-main
    },
    'success': {
        color-active: $brand-success,
        bg-color-active: $brand-success,
        color-hover: $brand-success,
        box-shadow: 0 0 0 2px $brand-success-box-shadow-color,
        color: $brand-main
    },
    'info': {
        color-active: $brand-info,
        bg-color-active: $brand-info,
        color-hover: $brand-info,
        box-shadow: 0 0 0 2px $brand-info-box-shadow-color,
        color: $brand-main
    },
    'error': {
        color-active: $brand-error,
        bg-color-active: $brand-error,
        color-hover: $brand-error,
        box-shadow: 0 0 0 2px $brand-error-box-shadow-color,
        color: $brand-main
    },
    'warning': {
        color-active: $brand-warning,
        bg-color-active: $brand-warning,
        color-hover: $brand-warning,
        box-shadow: 0 0 0 2px $brand-warning-box-shadow-color,
        color: $brand-main
    },
    'danger': {
        color-active: $brand-danger,
        bg-color-active: $brand-danger,
        color-hover: $brand-danger,
        box-shadow: 0 0 0 2px $brand-danger-box-shadow-color,
        color: $brand-main
    },
    'disabled': {
        color-active: $brand-border-disabled,
        color-hover: $brand-border-disabled,
        bg-color-active: $brand-border-disabled,
        box-shadow: none,
        color: #ccc
    }
};