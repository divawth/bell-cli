$selector-alert = $selector-prefix + '-alert';

$alert-font-size = 12px;
$alert-line-height = 14px;
$alert-padding = 12px 16px;
$alert-bell-icon-margin-gap = 6px;

$alert-close-padding = 0 10px;
$alert-close-min-width = 24px;
$alert-close-height = 40px;
$alert-close-font-size = 22px;
$alert-close-font-color = #999;
$alert-close-font-hover-color = #444;

$alert-brand-hash = {
    '': {
        border: #BBDCFD,
        bg-color: #CDE6FE,
        bell-icon-color: $brand-primary,
        color: #064283
    },
    'secondary': {
        border: #D6D8DB,
        bg-color: #E2E3E5,
        bell-icon-color: $brand-secondary,
        color: #383D41
    },
    'info': {
        border: #BFE5EB,
        bg-color: #D2ECF1,
        bell-icon-color: $brand-info,
        color: #11545F
    },
    'success': {
        border: #C4E6CC,
        bg-color: #D5EDDB,
        bell-icon-color: $brand-success,
        color: #195627
    },
    'danger': {
        border: #F4C6CC,
        bg-color: #F7D7DB,
        bell-icon-color: $brand-danger,
        color: #701D26
    },
    'warning': {
        border: #FEEDBD,
        bg-color: #FFF3CF,
        bell-icon-color: $brand-warning,
        color: #846315
    },
    'error': {
        border: #F4C6CC,
        bg-color: #FC451E,
        bell-icon-color: #fff,
        color: #fff
    },
    'light': {
        border: $brand-white,
        bg-color: $brand-white,
        bell-icon-color: $brand-secondary-active,
        color: $brand-secondary-active
    },
    'dark': {
        border: $brand-secondary-hover,
        bg-color: $brand-muted,
        bell-icon-color: $brand-muted-active,
        color: #fff
    }
}
