$selector-select = $selector-prefix + '-select'
$selector-select-button = $selector-prefix + '-select-button'

$select-size-hash = {
    '': {
        font: 12px,
        padding: 7px 30px 8px 15px,
        max-height: 200px,
        height: 32px,
        option-padding: 10px 15px,
        arrow-padding: 9px 15px
    },
    'small': {
        font: 12px,
        padding: 3px 30px 3px 15px,
        max-height: 200px,
        height: 24px,
        option-padding: 6px 15px,
        arrow-padding: 4px 15px
    },
    'large': {
        font: 14px,
        padding: 8px 30px 8px 15px,
        max-height: 200px,
        height: 36px,
        option-padding: 12px 15px,
        arrow-padding: 10px 15px
    }
};

$select-color-hash = {
    '': {
        border-color: $brand-border,
        bg-color: $brand-bg,
        brand-bg-hover: $brand-primary-box-shadow-color,
        border-color-hover: $brand-primary-hover,
        box-shadow: 0 0 0 2px $brand-primary-box-shadow-color
    },
    'success': {
        border-color: $brand-border,
        bg-color: $brand-bg,
        brand-bg-hover: $brand-success-box-shadow-color,
        border-color-hover: $brand-success-hover,
        box-shadow: 0 0 0 2px $brand-success-box-shadow-color
    },
    'error': {
        border-color: $brand-border,
        bg-color: $brand-bg,
        brand-bg-hover: $brand-error-box-shadow-color,
        border-color-hover: $brand-error-hover,
        box-shadow: 0 0 0 2px $brand-error-box-shadow-color
    },
    'info': {
        border-color: $brand-border,
        bg-color: $brand-bg,
        brand-bg-hover: $brand-info-box-shadow-color,
        border-color-hover: $brand-info-hover,
        box-shadow: 0 0 0 2px $brand-info-box-shadow-color
    },
    'warning': {
        border-color: $brand-border,
        bg-color: $brand-bg,
        brand-bg-hover: $brand-warning-box-shadow-color,
        border-color-hover: $brand-warning-hover,
        box-shadow: 0 0 0 2px $brand-warning-box-shadow-color
    },
    'danger': {
        border-color: $brand-border,
        bg-color: $brand-bg,
        brand-bg-hover: $brand-danger-box-shadow-color,
        border-color-hover: $brand-danger-hover,
        box-shadow: 0 0 0 2px $brand-danger-box-shadow-color
    },
    'disabled': {
        bg-color: #F7F7F7,
        border-color: $brand-border-disabled,
        brand-bg-hover: none,
        border-color-hover: $brand-border-disabled,
        box-shadow: none
    }
};