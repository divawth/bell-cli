alert-style(style)

    ui-set('border-color', style['border'])
    ui-set('background-color', style['bg-color'])
    ui-set('color', style['color'])

    {$selector-alert}-icon

        ui-set('color', style['bell-icon-color'])

ui-alert()

    ui-connect(
        hash: $alert-brand-hash,
        each: alert-style
    )